<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212828">

    <TextView
        android:id="@+id/Tutorial_texto"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_below="@+id/Tutorial_titulo"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/montserrat"
        android:text="Para utilizar o sistema, primeiro ative o Bluetooth clicando no botão correspondente (certifique-se de que seu dispositivo esteja com o bluetooth ligado)."
        android:textAlignment="center"
        android:textColor="#B0AE97"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Tutorial_texto2"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_below="@+id/Tutorial_texto"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/montserrat"
        android:text="Para irrigar a planta, clique no botão &quot;Irrigar planta&quot;. Isso irá ativar a bomba d'água e o vaso será regado."
        android:textAlignment="center"
        android:textColor="#B0AE97"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Tutorial_texto3"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_below="@+id/Tutorial_texto2"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat"
        android:text="Para ativar a irrigação automática da planta, onde ela será irrigada sempre que o nível de umidade estiver baixo, clique no botão &quot;Ligar&quot;. Para desligar, basta clicar no botão &quot;Desligar&quot;."
        android:textAlignment="center"
        android:textColor="#B0AE97"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Tutorial_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Tutorial"
        android:textAlignment="center"
        android:textColor="#B0AE97"
        android:textSize="30sp" />

</RelativeLayout>